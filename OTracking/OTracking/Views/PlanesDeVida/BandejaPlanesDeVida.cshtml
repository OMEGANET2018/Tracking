<style>
    #Loading {
        background-color: rgba(0, 0, 0, 0.60);
        position: fixed;
        left: 0px;
        top: 0px;
        z-index: 9999;
    }

        #Loading > img {
            width: 200px;
        }

    .pagination-active span {
        color: #f39c12 !important;
    }
</style>
<div class="container-fluid">
    <div id="RenderBandeja">
        @Html.Partial("_PlanesDeVidaPartial")
    </div>
    <nav class="d-flex justify-content-end align-items-center flex-wrap">
        <div>
            <button class="btn-warning boton form-control" onclick="location.href='@Url.Action("CrearPlanDeVida","PlanesDeVida")'" style="cursor:pointer;margin-bottom:20px;">
                <i class="fa fa-search"></i> Nuevo Plan
            </button>
        </div>
    </nav>
</div>

<div class="alert" role="alert" style="display:none;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
    <span></span>
</div>

<div id="Loading" style="display:none;">
    <img src="~/Content/Images/loading.gif" />
</div>

<script>
    function Delete(id) {
        var Data = {
            PlanDeVidaId: id,
            StatusId: 4
        };

        var width = $(window).width();
        var height = $(window).height();
        $("#Loading").show().css("width", width + "px").css("height", height + "px");
        $("#Loading > img").css("margin-left", ((width - 200) / 2) + "px").css("margin-top", ((height - 266) / 2) + "px");

        $.ajax({
            cache: false,
            dataType: 'json',
            method: 'POST',
            data: Data,
            url: '/PlanesDeVida/EnviarPlanDeVida',
            success: function (json) {
                $("#Loading").hide();
                if (json) {
                    alerta("Plan eliminado!", "verde");
                    Filtrar(1);
                } else {
                    alerta("No se pudo Eliminar el Plan", "rojo");
                }
            },
            error: function (error) {
                alerta("Sucedió un error al conectarse al servidor", "rojo");
                $("#Loading").hide();
                console.log(error);
            }
        });
    }

    function Filtrar(index) {
        data = {
            Index: index,
            Take: $("#take").val()
        };

        var width = $(window).width();
        var height = $(window).height();
        $("#Loading").show().css("width", width + "px").css("height", height + "px");
        $("#Loading > img").css("margin-left", ((width - 200) / 2) + "px").css("margin-top", ((height - 266) / 2) + "px");

        $.ajax({
            cache: false,
            dataType: 'html',
            method: 'POST',
            data: data,
            url: '/PlanesDeVida/ObtenerListadoPlanesDeVida',
            success: function (html) {
                if (html.indexOf("IniciarSesion") == -1) {
                    $("#Loading").hide();
                    $("#RenderBandeja").html(html);
                } else {
                    location.href = "/";
                }
            },
            error: function (error) {
                alerta("Sucedió un error al conectarse al servidor", "rojo");
                $("#Loading").hide();
                console.log(error);
            }
        });
    }
</script>