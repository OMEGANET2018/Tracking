@{
    int Take = 0;
    int Total = 0;
    int Primer = 0;
    int Ultimo = 0;
    int Index = 0;
    string eventos = "";
    if (ViewBag.Seguimiento != null)
    {
        Take = ViewBag.Seguimiento.Take;
        Index = ViewBag.Seguimiento.Index;
        Total = ViewBag.Seguimiento.TotalRegistros;
        Primer = ((Index - 1) * Take) + 1;
        Ultimo = Primer + (ViewBag.Seguimiento.Lista.Count - 1);

        Primer = Primer < 0 ? 0 : Primer;
        Ultimo = Ultimo < 0 ? 0 : Ultimo;
    }
    else
    {
        Take = 0;
    }
}

<div class="container-fluid" style="padding:0px;">
    <div class="box box-default mt-2" id="acordion">
        <div class="box-header with-border" id="heading1">
            <h3 class="box-title" style="cursor:pointer;" onclick="ColapsarTabla('table-responsive')"><i class="icon-list-numbered"></i> Listado de Personas </h3>
        </div>
    </div>
</div>
<div>
    <span class="informacion">Mostrando desde N° @Primer hasta @Ultimo de un total de @Total entradas</span>
    <div class="float-lg-right">
        Total de registros:
        <select id="take" onchange="Filtrar(1)">
            <option value="10" @(Take == 10 ? "selected" : "")>10</option>
            <option value="25" @(Take == 25 ? "selected" : "")>25</option>
            <option value="50" @(Take == 50 ? "selected" : "")>50</option>
            <option value="0" @(Take == 0 ? "selected" : "")>TODOS</option>
        </select>
    </div>
</div>
<div class="box box-info mt-2">
    <div class="table-responsive">
        <table class="table table-hover" id="TablaAExportar">
            <thead>
                <tr>
                    <th><input type="checkbox" onclick="checkAll(this)"/></th>
                    <th>Nombre</th>
                    <th>Tipo Documento</th>
                    <th>Nro Documento</th>
                    <th>Fecha</th>
                    <th>Tipo Seguimiento</th>
                    <th>Status Seguimiento</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (ViewBag.Seguimiento == null)
                    {
                        <tr><td colspan="7" class="text-center">Error al conectarse al servidor</td></tr>
                    }
                    else if (ViewBag.Seguimiento.Lista.Count == 0)
                    {
                        <tr><td colspan="7" class="text-center">No hay resultados</td></tr>
                    }
                    else
                    {
                        foreach (OTracking.Models.Comun.BandejaSeguimientoDetalle item in ViewBag.Seguimiento.Lista)
                        {
                            eventos += "{title: '" + item.Nombre + "', start: '" + item.Fecha.ToString("yyyy-MM-dd") + "', color: '" + item.Color + "', SeguimientoId: " + item.SeguimientoId + "},";
                            <tr id="@item.SeguimientoId">
                                <td><input type="checkbox" onclick="SingleCheck()"/></td>
                                <td id="menu" style="display:none;">Calendar</td>
                                <td id="menu">@item.Nombre</td>
                                <td id="menu">@item.TipoDocumento</td>
                                <td id="menu">@item.NroDocumento</td>
                                <td id="menu">@item.Fecha.ToString("dd/MM/yyyy hh:mm tt")</td>
                                <td id="menu">@item.TipoSeguimiento</td>
                                <td id="menu" style="font-weight:bolder;color:@item.Color">@item.StatusSeguimiento</td>
                                <td id="status" style="display:none">@item.StatusSeguimientoId</td>
                                <td id="tipo" style="display:none">@item.TipoSeguimientoId</td>
                                <td id="menufecha" style="display:none">@item.Fecha.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <div class="paginacion-tabla d-flex justify-content-center">
            <div>
                <ul class="pagination">
                    @{
                        if (Index > 1)
                        {
                            <li class="page-item" onclick="Filtrar(1)">
                                <span class="page-link" aria-hidden="true">Primero</span>
                            </li>
                            <li class="page-item" onclick="Filtrar(@(Index - 1))">
                                <span class="page-link" aria-hidden="true">Anterior</span>
                            </li>
                        }
                        int pagina = 0;
                        if (Take > 0)
                        {
                            for (int i = 0; i < Total; i = i + Take)
                            {
                                pagina++;
                                if ((pagina > (Index - 5)) && pagina < (Index + 5))
                                {
                                    <li @(pagina == Index ? "class=pagination-active" : "onclick=Filtrar(" + pagina + ")")><span class="page-link" aria-hidden="true">@pagina</span></li>
                                }

                            }
                        }
                        if (pagina > Index)
                        {
                            <li class="page-item" onclick="Filtrar(@(Index + 1))">
                                <span class="page-link" aria-hidden="true">Siguiente</span>
                            </li>
                            <li class="page-item" onclick="Filtrar(@(pagina))">
                                <span class="page-link" aria-hidden="true">Ultimo</span>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<script>
    function Init() {
        $('#calendar').fullCalendar("destroy");
        $('#calendar').fullCalendar({
            locale: 'es',
            defaultDate: new Date(),
            eventClick: function (calEvent, jsEvent, view) {
                $("#TablaAExportar tbody").children("#" + calEvent.SeguimientoId).children("#menu").contextMenu({ x: jsEvent.pageX, y: jsEvent.pageY });
            },
            header: {
                left: 'prev,next today',
                center: 'title',
                right: ''
            },
            events: [
            @Html.Raw(eventos)
            ]
        });

        $("#TablaAExportar tbody").contextMenu({
            selector: '#menu',
            trigger: 'left',
            hideOnSecondTrigger: true,
            items: {
                "Ver": {
                    name: "Ver",
                    callback: function (itemKey, opt, rootMenu, originalEvent) {

                    },
                    visible: function (key, opt) {
                        if ($(opt.$trigger).html() == "Calendar") {
                            return true;
                        } else {
                            return false;
                        }
                    }
                },
                "Confirmar": {
                    name: "Confirmar",
                    callback: function (itemKey, opt, rootMenu, originalEvent) {
                        var data = { id: $(opt.$trigger).parent().attr("id") };

                        var width = $(window).width();
                        var height = $(window).height();
                        $("#Loading").show().css("width", width + "px").css("height", height + "px");
                        $("#Loading > img").css("margin-left", ((width - 200) / 2) + "px").css("margin-top", ((height - 266) / 2) + "px");

                        $.ajax({
                            cache: false,
                            dataType: 'json',
                            method: 'POST',
                            data: data,
                            url: '/Seguimiento/ConfirmarSeguimiento',
                            success: function (json) {
                                $("#Loading").hide();
                                if (json) {
                                    setTimeout(function () { alerta("Fecha Confirmada!", "verde") },1000);
                                    Filtrar(@Index);
                                } else {
                                    alerta("No se pudo Confirmar la Fecha", "rojo");
                                }

                            },
                            error: function (error) {
                                alerta("Sucedió un error al conectarse al servidor", "rojo");
                                $("#Loading").hide();
                                console.log(error);
                            }
                        });
                    },
                    disabled: function (key, opt) {
                        if ($(opt.$trigger).parent().children("#status").html() == 1) {
                            return false;
                        } else {
                            return true;
                        }
                    }
                },
                "Cambiar": {
                    name: "Cambiar",
                    callback: function (itemKey, opt, rootMenu, originalEvent) {
                        $("#ModalCambioFecha").modal();
                        var margen = ($(window).height() / 2) - 200;
                        $("#ModalCambioFecha .modal-content").css("margin-top", margen + "px");
                        $("#ModalCambioFecha input").val("");
                        $("#ModalCambioFecha #btnCambiar").attr("onclick", "ValidarCambiarFecha(" + $(opt.$trigger).parent().attr("id") + ")");
                    },
                    disabled: function (key, opt) {
                        if ($(opt.$trigger).parent().children("#status").html() == 1 || $(opt.$trigger).parent().children("#status").html() == 2) {
                            return false;
                        } else {
                            return true;
                        }
                    }
                },
                "Atender": {
                    name: "Atender",
                    callback: function (itemKey, opt, rootMenu, originalEvent) {
                        if ($(opt.$trigger).parent().children("#tipo").html() == 1) {
                            $("#ModalAdjuntar").modal();
                            var margen = ($(window).height() / 2) - 200;
                            $("#ModalAdjuntar .modal-content").css("margin-top", margen + "px");
                            $("#ModalAdjuntar input").val("");
                            $("#ModalAdjuntar #btnAceptar").attr("onclick", "ValidarAdjuntarCita(" + $(opt.$trigger).parent().attr("id") + ")");
                        } else if ($(opt.$trigger).parent().children("#tipo").html() == 2){
                            $("#ModalControl").modal();
                            var margen = ($(window).height() / 2) - 200;
                            $("#ModalControl .modal-content").css("margin-top", margen + "px");
                            $("#ModalControl input").val("");
                            $("#ModalControl #btnAceptar").attr("onclick", "ValidarAdjuntarCita(" + $(opt.$trigger).parent().attr("id") + ")");
                        }
                    },
                    disabled: function (key, opt) {
                        if ($(opt.$trigger).parent().children("#menufecha").html() != moment(new Date()).format("YYYY-MM-DD")) {
                            return true;
                        } else{
                            if ($(opt.$trigger).parent().children("#status").html() == 2) {
                                return false;
                            } else {
                                return true;
                            }
                        }
                    }
                },
                "Eliminar": {
                    name: "Eliminar",
                    callback: function (itemKey, opt, rootMenu, originalEvent) {
                        var data = { id: $(opt.$trigger).parent().attr("id") };

                        var width = $(window).width();
                        var height = $(window).height();
                        $("#Loading").show().css("width", width + "px").css("height", height + "px");
                        $("#Loading > img").css("margin-left", ((width - 200) / 2) + "px").css("margin-top", ((height - 266) / 2) + "px");

                        $.ajax({
                            cache: false,
                            dataType: 'json',
                            method: 'POST',
                            data: data,
                            url: '/Seguimiento/EliminarSeguimiento',
                            success: function (json) {
                                $("#Loading").hide();
                                if (json) {
                                    setTimeout(function () { alerta("Fecha Eliminada!", "verde") }, 1000);
                                    Filtrar(@Index);
                                } else {
                                    alerta("No se pudo Eliminar la Fecha", "rojo");
                                }

                            },
                            error: function (error) {
                                alerta("Sucedió un error al conectarse al servidor", "rojo");
                                $("#Loading").hide();
                                console.log(error);
                            }
                        });
                    }
                },
                "sep1": "---------",
                "Cerrar": {
                    name: "Cerrar",
                    callback: function (itemKey, opt, rootMenu) {}
                }
            }

        });
    }

    function CambiarFecha(id) {

        var data = {
            id: id,
            fecha: $("#ModalCambioFecha input").val()
        };

        var width = $(window).width();
        var height = $(window).height();
        $("#Loading").show().css("width", width + "px").css("height", height + "px");
        $("#Loading > img").css("margin-left", ((width - 200) / 2) + "px").css("margin-top", ((height - 266) / 2) + "px");

        $.ajax({
            cache: false,
            dataType: 'json',
            method: 'POST',
            data: data,
            url: '/Seguimiento/CambiarSeguimiento',
            success: function (json) {
                $("#Loading").hide();
                if (json) {
                    setTimeout(function () { alerta("Fecha Actualizada!", "verde") }, 1000);
                    Filtrar(@Index);
                    $("#ModalCambioFecha").modal("toggle");
                } else {
                    alerta("No se pudo Actualizar la Fecha", "rojo");
                }

            },
            error: function (error) {
                alerta("Sucedió un error al conectarse al servidor", "rojo");
                $("#Loading").hide();
                console.log(error);
            }
        });
    }

    function AdjuntarCita(id,file,nombre) {
        var data = {
            id: id,
            archivo: file,
            nombre: nombre
        };

        var width = $(window).width();
        var height = $(window).height();
        $("#Loading").show().css("width", width + "px").css("height", height + "px");
        $("#Loading > img").css("margin-left", ((width - 200) / 2) + "px").css("margin-top", ((height - 266) / 2) + "px");

        $.ajax({
            cache: false,
            dataType: 'json',
            method: 'POST',
            data: data,
            url: '/Seguimiento/AdjuntarCita',
            success: function (json) {
                $("#Loading").hide();
                if (json) {
                    setTimeout(function () { alerta("Cita Atendida!", "verde") }, 1000);
                    Filtrar(@Index);
                    $("#ModalAdjuntar").modal("toggle");
                } else {
                    alerta("No se pudo Atender la Cita", "rojo");
                }

            },
            error: function (error) {
                alerta("Sucedió un error al conectarse al servidor", "rojo");
                $("#Loading").hide();
                console.log(error);
            }
        });
    }
</script>